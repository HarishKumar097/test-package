{
  "name": "server-node-sdk",
  "version": "1.0.7",
  "description": "The offcial Typescript sdk for the FastPix API",
  "types": "dist/index.d.ts",
  "main": "dist/index.mjs",
  "type": "commonjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs",
    "default": "./dist/index.mjs"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "build:cjs": "esbuild src/index.ts --bundle --sourcemap  --minify --outfile=dist/index.cjs --platform=node --format=cjs",
    "build:esm": "esbuild src/index.ts --bundle --sourcemap --minify  --outfile=dist/index.mjs --platform=node --format=esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir './dist'",
    "build": "npm run format && npm run build:esm && npm run build:cjs && npm run build:types"
  },
  "author": "FastPix, Inc",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "esbuild": "^0.24.0",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3"
  }
}
